.cafe-column
  - @shops.each do |shop|
    .cafe-col
      = link_to shop_path(shop.id) do
        %figure
          = image_tag shop.image.url
        -# %p.prefecture
        -#   = shop.prefecture_code
        .cafe-detail
          .cafe-name
            %p= shop.name
            %p.cafe-evaluation{ id: "star-evaluation-#{shop.id}" }
              :javascript
                $('#star-evaluation-#{shop.id}').raty({
                  starOff: "#{asset_path('star-off.png')}",
                  starOn: "#{asset_path('star-on.png')}",
                  starHalf: "#{asset_path('star-half.png')}",
                  half: true,
                  readOnly: true,
                  score: "#{shop.evaluation}",
                });
          .cafe-station
            = shop.station
            %span.cafe-move
              = shop.move
              = shop.time
              分くらい
      .like{ id: "like-btn-#{shop.id}" }
        - if shop.liked_by?(current_user)
          = link_to(shop_add_path(shop), method: :delete, remote: true, id: :"like-button-#{shop.id}") do
            %i.fa-lg.fas.fa-heart.icon-btn.liked
        - else
          = link_to(shop_add_path(shop), method: :post, remote: true, id: :"like-button-#{shop.id}") do
            %i.fa-lg.fas.fa-heart.icon-btn.not-like