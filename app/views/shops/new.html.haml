= render "./layouts/header"
%main.main
  .post-area
    %section
      .head02
        %h2
          Cafe post
      .form
        = form_with model: @shop, local: true do |f|
          .field
            %p.title
              お店や食べ物の画像（3枚まで）
              %span.required
                必須
            .images
              = f.file_field :image
          .field
            %p.title
              お店の名前
              %span.required
                必須
            .name
              = f.text_field :name, placeholder: "喫茶店の名前"
          .field
            %p.title
              評価
              %span.required
                必須
            .evaluation
              = f.text_field :evaluation, placeholder: "★★★★★"
          .field
            %p.title
              都道府県
              %span.required
                必須
            .prefecture
              = f.collection_select :prefecture_code, Prefecture.all, :id, :name, prompt: "---"
          .field
            %p.title
              最寄駅
              %span.required
                必須
            .station
              = f.text_field :station, placeholder: "例）渋谷駅"
          .field
            %p.title
              移動手段
              %span.required
                必須
            .transportation
              = f.select :move, [["--"],["徒歩"],["車"]]
              %span で
              = f.text_field :time, placeholder: "例）3"
              %span 分くらい
          .field
            %p.title
              説明
            .description
              = f.text_area :description, placeholder: "例）　お店の雰囲気がすごく良い。ショートケーキとミルクティーがおすすめ。"
          .actions
            = f.submit "Send"
= render "./layouts/footer"